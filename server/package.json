{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "rimraf ./dist && tsc -p .",
    "prod": "node ./dist/server.js",
    "lint:check": "eslint ./src/**/*.ts",
    "lint:fix": "eslint --fix --ext src/**/*.ts",
    "prettier:check": "prettier --check \"src/**/*.{ts,css,js,html}\" --config .prettierrc.json",
    "prettier:fix": "prettier --write \"src/**/*.{ts,css,js,html}\" --config .prettierrc.json",
    "migration:up": "ts-node ./src/database/migrations/base.migration.ts up",
    "migration:down": "ts-node ./src/database/migrations/base.migration.ts down",
    "seeder:up": "ts-node ./src/database/seeders/__base.seeder.ts up",
    "seeder:down": "ts-node ./src/database/seeders/__base.seeder.ts down",
    "database:up": "npm run migration:up && npm run seeder:up",
    "database:down": "npm run migration:down",
    "database:backup": "ts-node ./src/core/backup.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "http-status-codes": "^2.3.0",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}